<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tbailey.tim.literatura.BookListActivity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:padding="8dp">


        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Score"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0/5"
            android:textSize="20sp" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Who wrote 'Things Fall Apart'?"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/question"/>

    <Button
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="Wole Soyinka"
        android:background="#A9A9A9"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:padding="8dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/choice1"
        style="@style/Widget.AppCompat.Button.Colored" />/>

    <Button
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="Chinua Achebe"
        android:background="#A9A9A9"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:padding="8dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/choice2"
        style="@style/Widget.AppCompat.Button.Colored" />/>

    <Button
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="Nadine Gordimer"
        android:background="#A9A9A9"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:padding="8dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/choice3"
        style="@style/Widget.AppCompat.Button.Colored" />/>

    <Button
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="Ngugi wa Thiong'o"
        android:background="#A9A9A9"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:padding="8dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/choice4"
        style="@style/Widget.AppCompat.Button.Colored" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />/>

</LinearLayout>
